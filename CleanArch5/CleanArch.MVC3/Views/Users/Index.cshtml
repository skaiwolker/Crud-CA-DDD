@model IEnumerable<CleanArch.Application.ViewModels.UserViewModel>

@{
	ViewData["Title"] = "Users Management";
}

<style>
	.model=lg{
		max-width: 80%;
	}
</style>

<div>
	<h2>@ViewData["Title"]</h2>
</div>
<hr />

<div class="row">
	<div class="col-md-12">
		<div>
			<div class="pull-left">
				<a asp-action="Create" class="btn btn-primary">
					<span title="Register New" class="fas fa-plus">Register New</span>
				</a>
			</div>
		</div>
	</div>
</div>
<br />

<div class="panel panel-default">
	<table class="table table-striped">
		<thead>
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.FirstName) 
					&nbsp;
					@Html.DisplayNameFor(model => model.LastName)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Email)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.AccountType)
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model){
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.FirstName)
						&nbsp;
						@Html.DisplayFor(modelItem => item.LastName)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Email)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.AccountType)
					</td>
					<td>
						<a asp-action="Edit" asp-route-id="@item.Id" title="Edit" class="btn btn-warning">
							<span class="fas fa-edit">Edit</span>
						</a>

						<a asp-action="Details" asp-route-id="@item.Id" title="Details" class="btn btn-primary">
							<span class="fas fa-edit">Details</span>
						</a>

						<a asp-action="Delete" asp-route-id="@item.Id" title="Delete" class="btn btn-danger">
							<span class="fas fa-edit">Delete</span>
						</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>